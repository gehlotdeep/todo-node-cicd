<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhatsApp Clone</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .chat-container {
            width: 350px;
            height: 500px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: flex;
            flex-direction: column;
        }
        .chat-box {
            flex: 1;
            overflow-y: auto;
            padding: 10px;
        }
        .message {
            margin: 5px 0;
            padding: 8px;
            border-radius: 10px;
            max-width: 70%;
            position: relative;
        }
        .sent {
            background: #dcf8c6;
            align-self: flex-end;
        }
        .received {
            background: #fff;
            align-self: flex-start;
        }
        .name {
            font-size: 13px;
            font-weight: bold;
            display: block;
        }
        .input-box {
            display: flex;
            padding: 10px;
            background: #eee;
            border-top: 1px solid #ccc;
        }
        .input-box input {
            flex: 1;
            padding: 8px;
            border: none;
            border-radius: 5px;
        }
        .input-box button {
            padding: 8px 15px;
            background: #25D366;
            color: white;
            border: none;
            border-radius: 5px;
            margin-left: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="chat-container">
        <div class="chat-box" id="chat-box">
            <div class="message received"><span class="name">Drishti</span>Hello!</div>
            <div class="message sent"><span class="name">Deepak</span>Hi there!</div>
        </div>
        <div class="input-box">
            <input type="text" id="message-input" placeholder="Type a message...">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        // Assign a unique name per machine
        let username = localStorage.getItem('chat-username');
        if (!username) {
            username = prompt("Enter your name:") || "User";
            localStorage.setItem('chat-username', username);
        }

        function sendMessage() {
            const input = document.getElementById('message-input');
            const messageText = input.value.trim();
            if (messageText !== '') {
                const messageDiv = document.createElement('div');
                const nameSpan = document.createElement('span');
                nameSpan.classList.add('name');
                
                messageDiv.classList.add('message', 'sent');
                nameSpan.textContent = username;
                
                messageDiv.appendChild(nameSpan);
                messageDiv.appendChild(document.createTextNode(messageText));
                document.getElementById('chat-box').appendChild(messageDiv);
                input.value = '';
            }
        }
    </script>
</body>
</html>
