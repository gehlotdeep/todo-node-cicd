<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Our Chat's</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #bbdefb);
        color: #333;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 100vh;
      }

      h1 {
        background: linear-gradient(90deg, #2196f3, #21cbf3);
        color: white;
        width: 100%;
        margin: 0;
        padding: 25px;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }

      ul {
        list-style: none;
        padding: 0;
        width: 90%;
        max-width: 600px;
        margin-top: 30px;
      }

      ul li {
        background: white;
        border-radius: 12px;
        margin-bottom: 12px;
        padding: 15px 20px;
        position: relative;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }

      ul li:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
      }

      .delete-btn, .edit-btn {
        text-decoration: none;
        font-weight: bold;
        position: absolute;
        top: 12px;
        font-size: 18px;
        transition: color 0.3s;
      }

      .delete-btn {
        color: #e53935;
        right: 15px;
      }

      .delete-btn:hover {
        color: #b71c1c;
      }

      .edit-btn {
        color: #fbc02d;
        right: 45px;
      }

      .edit-btn:hover {
        color: #f57f17;
      }

      form {
        background: white;
        padding: 25px;
        margin-top: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 90%;
        max-width: 600px;
      }

      label {
        display: block;
        margin-bottom: 10px;
        font-weight: 600;
        color: #1976d2;
      }

      input[type="text"] {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 15px;
        transition: box-shadow 0.3s ease, border-color 0.3s ease;
      }

      input[type="text"]:focus {
        outline: none;
        border-color: #2196f3;
        box-shadow: 0 0 6px rgba(33, 150, 243, 0.4);
      }

      input[type="submit"] {
        background: linear-gradient(90deg, #2196f3, #21cbf3);
        color: white;
        border: none;
        padding: 10px 25px;
        cursor: pointer;
        font-weight: 600;
        border-radius: 8px;
        transition: background 0.3s ease, transform 0.2s ease;
      }

      input[type="submit"]:hover {
        background: linear-gradient(90deg, #1976d2, #00bcd4);
        transform: translateY(-2px);
      }

      /* Modal Styling */
      .modal {
        display: none;
        position: fixed;
        z-index: 100;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
        justify-content: center;
        align-items: center;
      }

      .modal-content {
        background: white;
        padding: 25px;
        border-radius: 12px;
        width: 90%;
        max-width: 400px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      }

      .modal-close {
        float: right;
        cursor: pointer;
        font-size: 18px;
        color: #666;
      }

      .modal-close:hover {
        color: #000;
      }
    </style>
  </head>

  <body>
    <h1>Messages</h1>

    <ul>
      <% todolist.forEach(function(todo, index) { %>
        <li>
          <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
          <a href="#" class="edit-btn" onclick="openEditModal(<%= index %>, '<%- todo %>')">✎</a>
          <%- todo %>
        </li>
      <% }); %>
    </ul>

    <form action="/todo/add/" method="post">
      <p>
        <label for="newtodo">Text Me</label>
        <input type="text" name="newtodo" id="newtodo" autofocus />
        <input type="submit" value="Send" />
      </p>
    </form>

    <!-- ✨ Edit Modal -->
    <div id="editModal" class="modal">
      <div class="modal-content">
        <span class="modal-close" onclick="closeEditModal()">✖</span>
        <h3>Edit Message</h3>
        <form id="editForm" method="post">
          <input type="hidden" name="_method" value="PUT">
          <input type="text" name="editTodo" id="editTodoInput" />
          <input type="submit" value="Save" />
        </form>
      </div>
    </div>

    <script>
      const modal = document.getElementById('editModal');
      const editInput = document.getElementById('editTodoInput');
      const editForm = document.getElementById('editForm');

      function openEditModal(index, text) {
        editInput.value = text;
        editForm.action = `/todo/edit/${index}`;
        modal.style.display = 'flex';
        editInput.focus();
      }

      function closeEditModal() {
        modal.style.display = 'none';
      }

      // Close modal if clicked outside
      window.onclick = function(event) {
        if (event.target == modal) {
          closeEditModal();
        }
      }
    </script>
  </body>
</html>
